@import 'nib'

body, html
	width: 100%
	height: 100%
	
	background: #565656

.navbar-container
	padding: 0 20px

.page
	position: relative

	box-sizing: border-box
	width: 100%
	height: 100%
	padding-top: 40px

.editor
	position: absolute
	top: 40px
	bottom: 0
	left: 0

	width: 100%
	margin: 0
	padding: 20px

	box-sizing: border-box
	resize: none

	color: #DCDCDC
	background: #141414
	border: none
	border-radius: 0
	box-shadow: none !important